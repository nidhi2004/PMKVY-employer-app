                android:layout_weight="1"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pincode"
                android:textSize="20dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/certified_candidate_pincode_address"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="491228"
                android:layout_weight="1"
                android:textSize="20dp"/>
        </TableRow>
    </TableLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:textAlignment="center"
        android:text="certified for the Course(s)"
        android:textSize="22dp"
        android:textStyle="bold"
        android:background="@color/cardview_shadow_end_color"/>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_margin="5dp"
        app:cardElevation="4dp"
        app:cardUseCompatPadding="true">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:stretchColumns="*"
        android:padding="10dp"
        android:layout_weight="2">

        <TableRow>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Course Name"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/certified_candidate_course_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Digital Photography and videography"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Training Center Name"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/certified_candidate_training_center_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="JSS Rural Developement And Self Employment"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Sector"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/certified_candidate_sector"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="IT-ITeS"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="State"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/certified_candidate_state"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Karnataka"
                android:textSize="20dp"/>
        </TableRow>
        <TableRow
            android:layout_marginTop="7dp">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="District"
                android:layout_weight="1"
                android:textSize="20sp"
                android:textStyle="bold"/>
            <TextView
                android:id="@+id/certified_candidate_district"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Chamarajanagar"
                android:textSize="20dp"/>

        </TableRow>
