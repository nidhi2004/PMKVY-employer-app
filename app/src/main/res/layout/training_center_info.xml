<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:focusable="true"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:clickable="true"
    android:background="#FFEFA5"

    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="6dp"
        app:cardUseCompatPadding="true"
        app:cardElevation="7dp"
        android:id="@+id/training_card_view"

        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/training_name_list"
                android:text="LOLL"
                android:clickable="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/training_address_list"
                android:text="LJHOH"
                android:clickable="true"
                android:padding="5dp"
                android:layout_below="@id/training_name_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/training_phone_no_list"
                android:padding="5dp"
                android:text="PHONE"
                android:clickable="true"
                android:layout_below="@+id/training_address_list"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="INFO"
                android:clickable="true"
                android:padding="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/training__phone_no_list"
                android:id="@+id/centre_info"
                android:visibility="gone"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calll"
                android:layout_marginLeft="5dp"
                android:shadowColor="@color/colorPrimary"
                android:id="@+id/call"
                android:background="@android:color/holo_green_dark"
                android:visibility="gone"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>